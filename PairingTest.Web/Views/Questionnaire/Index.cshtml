@model PairingTest.Web.Models.QuestionnaireViewModel
@{
   ViewBag.Title = Model.QuestionnaireTitle;
}

<div>
    @using (Html.BeginForm("Response", "Questionnaire", FormMethod.Post, new { @class = "col-xs-4" })) {
    @Html.HiddenFor(x => x.QuestionnaireTitle)
    <h3>@Model.QuestionnaireTitle</h3>
        for (int i = 0; i < Model.QuestionsText.Count; i++) {
        @Html.Label(@Model.QuestionsText[i])
        @Html.TextBoxFor(x => x.AnswersText[i], new { @class = "form-control" })
        @Html.HiddenFor(x => x.QuestionsText[i], new { name = string.Format("Model.QuestionsText[{0}]", i) })
        }
    <input type="submit" class="btn btn-default" value="Submit" />
    }
</div>